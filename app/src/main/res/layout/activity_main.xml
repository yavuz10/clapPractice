<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:background="@color/light_orange"
        android:layout_height="match_parent"
        android:layout_weight="0.70">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button

                android:foreground="@drawable/effects"
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/home_button"
                android:text="Home"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/main_orange"
                />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:background="@color/main_orange"
                android:layout_height="@dimen/_2sdp"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/flash"

                    android:foreground="@drawable/effects"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/home_button"
                    android:text="FlashLight"/>
                <Button
                    android:id="@+id/vibration"

                    android:foreground="@drawable/effects"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/home_button"
                    android:text="Vibration"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"

                    android:foreground="@drawable/effects"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                   android:id="@+id/ringtone"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/home_button"
                    android:text="Ringtone"/>
                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/main_orange"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_80sdp"
                    android:background="@color/main_orange"
                    android:layout_height="@dimen/_2sdp"
                    />

                <Button
                    android:id="@+id/rate"
                    android:layout_width="match_parent"

                    android:foreground="@drawable/effects"
                    android:layout_height="@dimen/_40sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/home_button"
                    android:text="Rate us"/>
                <Button
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"

                    android:foreground="@drawable/effects"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/home_button"
                    android:text="Share"/>
                <Button
                    android:id="@+id/more"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"

                    android:foreground="@drawable/effects"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/home_button"
                    android:text="More"/>-->

            </LinearLayout>

        </ScrollView>




    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:background="@color/light_orange"
        android:layout_height="match_parent"
        android:layout_weight="1.3">

        <LinearLayout
            android:elevation="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:orientation="vertical"
            android:background="@drawable/main_card"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/gifImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/main" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:id="@+id/title_tv"
                    android:text="@string/find_phone_by_whistle"
                    android:textColor="@color/main_orange"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <View
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:layout_constraintStart_toStartOf="@+id/title_tv"
                    app:layout_constraintEnd_toEndOf="@+id/title_tv"
                    app:layout_constraintTop_toBottomOf="@+id/title_tv"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@color/main_orange"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/start_card_back"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    app:cardBackgroundColor="@color/light_orange"
                    app:cardCornerRadius="@dimen/_150sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/start_card_view"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/main_orange"
                    app:cardCornerRadius="@dimen/_150sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/startText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         android:textSize="@dimen/_22sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Start"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>



            </androidx.constraintlayout.widget.ConstraintLayout>




        </LinearLayout>

    </LinearLayout>




</LinearLayout>